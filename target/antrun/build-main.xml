<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <tempfile property="temp.file"/>
  <echo message="org.wildfly.cassandra" file="${temp.file}"/>
  <replace token="." file="${temp.file}" value="/"/>
  <loadfile property="module.path" srcfile="${temp.file}"/>
  <delete file="${temp.file}"/>
  <delete dir="target/module"/>
  <property name="module.dir" value="target/module/${module.path}/main"/>
  <copy file="src/main/resources/module/main/module.xml" tofile="${module.dir}/module.xml"/>
  <copy todir="${module.dir}" file="target/cassandra.jar"/>
  <echo>Module org.wildfly.cassandra has been created in the target/module directory. Copy to your WildFly installation.</echo>
</target>
</project>